.row
  .columns.large-12
    nav class="breadcrumbs"
      a href=root_path
        = embedded_svg ('MO-Home.svg')
      a class="unavailable" href="" =t("pages.payment.title")
.row
  .columns.large-12
    ul.header_nav_page
      li.passive.prev
        .arrow_prev
          =embedded_svg('MO-arrow.svg')
        a href=warranty_path(locale: I18n.locale)
          .ico_wrap
            =embedded_svg ('MO-Guaranty.svg')
      li.active
        .ico_wrap
          =embedded_svg ('MO-Payment.svg')
        h4 =t("pages.payment.title")
      li.passive.next
        .arrow_next
          =embedded_svg('MO-arrow.svg')
        a href=shipping_path(locale: I18n.locale)
          .ico_wrap
            =embedded_svg ('MO-Delivery.svg')
- if @page
  .page_wrap.info_wrap
    .row
      .columns.large-12
        = raw @page.description