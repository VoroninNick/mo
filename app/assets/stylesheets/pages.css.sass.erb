.contact_page_wrap
    position: relative
    #g_map
        height: 890px
    .cp_info_wrap
        position: absolute
        top: 0
        right: 0
        bottom: 0
        width: 445px
        .contacts_detail_wrap
            background: #ffffff
            margin: 5px
            -webkit-box-shadow: 2px 2px 2px 0px rgba(0,0,0,0.5)
            -moz-box-shadow: 2px 2px 2px 0px rgba(0,0,0,0.5)
            box-shadow: 2px 2px 2px 0px rgba(0,0,0,0.5)
            .contacts_detail_inner
                padding:
                    top: 20px
                    left: 27px
                    right: 27px
                    bottom: 27px
                h3
                    font:
                        size: 1rem
                        family: 'Fira Sans', sans-serif
                        weight: 500
                    color: #c8ae4b
                    text-transform: uppercase
                svg
                    path, polygon
                        fill: #c8ae4b
                ul
                    margin-left: 0
                    li
                        list-style: none
                        span
                            font:
                                size: 1.3125rem
                                family: 'Playfair Display', serif
                                weight: 700
                                style: normal
                            color: #6d6e71
                            text:
                                transform: uppercase
                .link_inner
                    p
                        margin: 0
                        display: inline-block
                        &:last-of-type
                            display: block
                            padding-left: 32px
                ul.social_networks_wrap
                    li
                        display: inline-block
                        margin-right: 12px
                        path
                            fill: #dd7272

        .contact_form_wrap
            background: #ffffff
            margin: 5px
            -webkit-box-shadow: 2px 2px 2px 0px rgba(0,0,0,0.5)
            -moz-box-shadow: 2px 2px 2px 0px rgba(0,0,0,0.5)
            box-shadow: 2px 2px 2px 0px rgba(0,0,0,0.5)
            .contact_form_inner
                padding:
                    top: 20px
                    left: 27px
                    right: 27px
                    bottom: 27px
                h3
                    font:
                        size: 1rem
                        family: 'Fira Sans', sans-serif
                        weight: 500
                    color: #c8ae4b
                    text-transform: uppercase
                .input
                    width: 100%
                    input
                        width: 100%
                        height: 30px
                        color: #6d6e71
                        text:
                            transform: uppercase
                        font:
                            size: 1.3125rem
                            family: 'Playfair Display', serif
                            weight: 700
                        border:
                            top: none
                            left: none
                            right: none
                            bottom: 1px solid #c8ae4b
                        margin-bottom: 25px
                        padding:
                            left: 10px
                            right: 10px
                        &:focus
                            outline: none
                    label
                        color: #c8ae4b
                        text:
                            transform: uppercase
                        font:
                            size: 1rem
                            family: 'Fira Sans', sans-serif
                            weight: 500
                textarea
                    min-height: 102px
                    border: 1px solid #c8ae4b
                    color: #a7a9ac
                    font:
                        size: 1rem
                        family: 'Fira Sans', sans-serif
                        weight: 500
                    &:focus
                        outline: none
                        box-shadow: none
                button
                    width: 150px
                    height: 30px
                    background: #c8ae4b
                    color: #ffffff
                    text:
                        transform: uppercase
                    font:
                        size: 0.875rem
                        family: 'Fira Sans', sans-serif
                        weight: 600
                    padding: 0
                    margin: 0
                    &:focus
                        outline: none
