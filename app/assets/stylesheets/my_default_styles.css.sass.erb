.no-padding-left
    padding-left: 0 !important
.no-padding-right
    padding-right: 0 !important
.no-padding
    padding-left: 0
    padding-right: 0
.no-padding-right-large
    @media (min-width : 64.063em) and (max-width : 90em)
        padding-right: 0 !important
    @media (min-width : 90.063em) and (max-width : 120em)
        padding-right: 0 !important
.no-padding-left-large
    @media (min-width : 64.063em) and (max-width : 90em)
        padding-left: 0 !important
    @media (min-width : 90.063em) and (max-width : 120em)
        padding-left: 0 !important

// sticky footer
.sf_container
    display: table
    height: 100%
    width: 100%
    @media (min-width : 0em) and (max-width : 1022px)
        display: block

.sf_footer
    display: table-row
    height: 1px
// end sf

.bi
    width: 100% !important
    height: 0
    padding-top: 100%
    overflow: hidden !important
    -webkit-background-size: cover !important
    -moz-background-size: cover !important
    -o-background-size: cover !important
    background-size: cover !important
.p_bi
    width: 100% !important
    height: 0
    padding-top: 70%
    overflow: hidden !important
    -webkit-background-size: cover !important
    -moz-background-size: cover !important
    -o-background-size: cover !important
    background-size: cover !important
.promo_bi
    width: 100% !important
    height: 353px
    overflow: hidden !important
    background:  url('<%=asset_path("pixel_weave.png")%>')

input
    outline: none !important
input:-webkit-autofill
    -webkit-box-shadow: inset 0 0 0 50px #fff !important /* Колір фону */
    -webkit-text-fill-color: #999 !important /* Колір тексту */
    color: #999 !important /* Колір тексту */

.bsh_right_bottom
    -webkit-box-shadow: 3px 3px 3px 0px rgba(0,0,0,0.4)
    -moz-box-shadow: 3px 3px 3px 0px rgba(0,0,0,0.4)
    box-shadow: 3px 3px 3px 0px rgba(0,0,0,0.4)

//breadcrumbs
nav.breadcrumbs
    a
        &:hover, &:focus
            color: #c8ae4b
        svg
            width: 20px
            height: 100%
            path
                fill: #c8ae4b

.breadcrumbs > *
    line-height: 20px

.mdn
    @media (min-width : 0em) and (max-width : 48.75em)
        display: none
.mdb
    @media (min-width : 0em) and (max-width : 48.75em)
        display: block

.cust_overlay
    &:after
        display: block
        content: ''
        background: rgba(0, 0, 0, 0.2)
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        z-index: 1000

.owl-buttons
    polygon
        fill: #ffffff
    .owl-prev, .owl-next
        margin: 0
        padding: 0
        border-radius: 0
        -webkit-border-radius: 0
        opacity: 1
        background: none !important
        width: 44px
        height: 11px
        svg
            width: 100%
            height: 100%
    .owl-prev
        +rotate(-90deg)
        position: absolute
        top: 41%
        left: -2.5rem
    .owl-next
        +rotate(90deg)
        position: absolute
        top: 41%
        right: -2.5rem

.p_read_more
    a
        color: #dd7272
        font:
            size: 1.125rem
            family: 'Playfair Display', serif
            style: italic
        line-height: 1.5rem

.logo_background_wrap
    background-color: #f1f2f2
    background-image: url('<%=asset_path("mm_backgroundPatter40.png")%>')
    background-size: 128px 128px

.medium-dn
    @media (min-width : 40.063em) and (max-width : 68.75em)
        display: none
.medium-db
    @media (min-width : 0em) and (max-width : 68.75em)
        display: block !important
.dn
    display: none

.fancybox-lock
    body
        overflow: visible !important

.scrollToTop
    width: 50px
    height: 50px
    text-align: center
    text-decoration: none
    position: fixed
    /*top: 75px*/
    right: 0
    display: none

.scrollToTop:hover
    rect
        fill: #dd7272
    polygon
        fill: #ffffff

.contact_page_wrap
    .gmnoprint
        img
            max-width: none