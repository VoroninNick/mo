.logo_background_wrap

.pd_products_pack_wrap
    h4
        padding-top: 25px
    .owl-buttons
        polygon
            fill: black
        div
            opacity: 1 !important

svg.svg_ico
    path, polygon, circle
        fill: #d1d3d4
ul.all_products_carousel
    margin: 0
    width: 100%
    height: 113px
    position: relative
    margin:
        top: 25px
        bottom: 30px
    li
        list-style: none
        display: inline-block
        height: 100%
        svg
            width: 80px
            height: 60px
            display: block
            cursor: pointer
            margin: 0 auto
        h4
            text:
                align: center
            padding-top: 20px
        &.category_prev
            position: absolute
            left: 0
            top: 0
        &:hover
            path, polygon, circle
                fill: #dd7272
        &.category_active
            +my_horizontal_align
                position: absolute
            svg
                cursor: default
            path, polygon
                fill: #a78c30
        &.category_next
            position: absolute
            top: 0
            right: 0
            &:hover
                path, polygon, circle
                    fill: #dd7272
        &.category_passive
            display: none
        a
            display: block


.products_tab
    width: 100%
    display: none
    .columns
        position: static !important
    .product-detail
        .columns
            position: relative !important

ul.product_properties
    margin: 0
    border-top: 1px solid #a78c30
