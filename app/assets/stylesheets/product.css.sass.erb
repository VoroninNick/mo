#form_add_to_cart
    padding-top: 40px
    .input
        width: 50px
        height: 40px
        display: inline-block
        float: left
        position: relative
        a
            display: block
            width: 30px
            height: 15px
            position: absolute
            left: 10px
            &.add_one_point
                top: -20px
            &.remove_one_point
                bottom: -20px
                +rotate(180deg)
            svg
                width: 100%
                height: 100%
                polygon
                    fill: #d1d3d4
        input
            width: 100%
            height: 100%
            background: #e8d69b
            border: 1px solid #c8ae4b
            font:
                size: 1.5rem
                family: 'Fira Sans', sans-serif
                weight: 500
            color: #ffffff
            text:
                align: center
    .input_send
        display: inline-block
        height: 40px
        width: 200px
        float: left
        margin-left: 1px
        .cust_button
            font:
                size: 1rem
                family: 'Fira Sans', sans-serif
                weight: 500
            color: #ffffff
            text:
                align: center
                transform: uppercase
            line-height: 1.5rem
            background: #c8ae4b
            margin: 0
            padding: 0
            width: 100%
            height: 100%

