.call_order_inner
    width: 100%
    height: 100%
    position: relative
    .co_header
        position: absolute
        left: 0
        top: 0
        right: 0
        height: 50px
        background: #e8d69b
        .coh_inner
            position: relative
            width: 100%
            height: 100%
        .link_phone_inner
            position: absolute
            top: 0
            left: 0
            bottom: 0
            width: 80%
            margin: 0 !important
                :left 25px !important
            svg
                width: 30px
                height: 100%
                path
                    fill: #a78c30
            span
                padding-left: 0 !important
                font:
                    size: 1rem
                    family: 'Playfair Display', serif
                    style: italic
                color: #a78c30
        label.cancel_popup
            display: block
            width: 20%
            position: absolute
            top: 0
            right: 0
            bottom: 0
    .form_wrap
        position: absolute
        top: 50px
        left: 0
        right: 0
        background: #ffffff
        padding: 30px 25px 55px 25px
        form
            .input
                input
                    width: 100%
                    height: 30px
                    color: #6d6e71
                    text-transform: uppercase
                    font-size: 1.3125rem
                    font-family: "Playfair Display", serif
                    font-weight: 700
                    border-top: none
                    border-left: none
                    border-right: none
                    border-bottom: 1px solid #c8ae4b
                    margin-bottom: 25px
                    padding-left: 10px
                    padding-right: 10px
                button
                    height: 30px
                    margin: 0
                        top: 15px
                    padding: 0
                    width: 100%
                    background: #c8ae4b
                    font:
                        size: 0.875rem
                        family: 'Fira Sans', sans-serif !important
                        style: normal !important
                        weight: 500

input.invisible_input
    position: absolute
input.call_order_input_status[type=checkbox]:checked ~ .sf_container
    #modal_call_order
        display: block
        &:before
            display: block
            content: ''
            width: 100%
            height: 100%
            position: fixed
            top: 0
            left: 0
            background: rgba(0,0,0,0.2)
    .header_menu_squad:after
        display: block
        content: ''
        background: rgba(0,0,0,0.2)
        width: 100%
        height: 100%
        position: relative
        top: -100%
        z-index: 111

input.cart_input_status[type=checkbox]:checked ~ .sf_container .modal_cart_wrap
    width: 535px
    &:before
        display: block
        content: ''
        width: 100%
        height: 100%
        position: fixed
        top: 0
        left: 0
        background: rgba(0,0,0,0.2)