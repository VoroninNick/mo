                path, polygon
                    fill: #a78c30 !important

            &.category_ethnic_tab
                display: inline-block
                position: absolute
                top: 0
                right: 0
                h4
                    opacity: 0
            &.category_theme_tab
                display: none
            &.category_kid_tab
                display: none
            &.category_brand_tab
                display: inline-block
                position: absolute
                top: 0
                left: 0
                h4
                    opacity: 0
    .products_tab
        display: none
    .holiday_tab
        display: block


