@import "mixins"

ul.header_nav_page
    margin: 0
    height: 105px
    width: 100%
    padding-top: 10px
    li
        display: inline-block
        list-style: none
        width: 33.33%
        height: 100%
        position: relative
        float: left
        .ico_wrap
            height: 60px
            width: 80px
            svg
                width: 100%
                height: 100%
        &.prev
            .ico_wrap
                position: absolute
                left: 40px
                top: 0
        &.passive
            path, polygon
                fill: #d1d3d4
            &:hover
                path, polygon
                    fill: #dd7272
        &.active
            .ico_wrap
                +my_horizontal_align
                    position: absolute
            path, polygon
                fill: #a78c30
        &.next
            .ico_wrap
                position: absolute
                right: 40px
                top: 0
        h4
            text-align: center
            padding-top: 70px

.arrow_prev
    position: absolute
    +rotate(-90deg)
    width: 46px
    top: 15%
    right: left
    svg
        width: 100%
        height: 100%

.arrow_next
    position: absolute
    +rotate(90deg)
    width: 46px
    top: 15%
    right: 0
    svg
        width: 100%
        height: 100%

.page_wrap
    padding-top: 50px
    padding-bottom: 115px
